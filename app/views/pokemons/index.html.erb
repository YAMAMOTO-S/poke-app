<h1>All Pokemons you cought !!</h1>
<%= render "shared/search", { path: new_pokemon_path } %>

<div>
  <% if @pokemons.present? %>
    <% @pokemons.each do |pokemon| %>
      <div style="display: inline-block;">
        No. <%= pokemon.order %>,
        Name: <b><%= pokemon.name %></b>
      </div>
      <div>
        <%= image_tag(pokemon.image_url, size: "200") %>
      </div>
  <% end %>
  <% end %>
</div>